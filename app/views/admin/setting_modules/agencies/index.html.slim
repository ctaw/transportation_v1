.pageheader
  h1 Agencies
  .breadcrumb-wrapper.hidden-xs
    span.label You are here:
    ol.breadcrumb
      li Dashboard
      li.active Agencies

section#main-content.wow.fadeInUp
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          h3.panel-title Data Table
          .actions.pull-right
            a href="agencies/new"
              i.fa.fa-plus
        .panel-body
          .table-responsive
            table.table.table-bordered.table-hover.table-striped
              thead
                tr
                  th ID
                  th Name
                  th Description
                  th
              tbody
                -if @agencies == []
                  tr
                    td colspan="4" No records
                -else
                 - @agencies.each do |c|
                   tr
                    td = c.id
                    td = c.name
                    td = c.description
                    td style="width:8%;"
                      .action-icon.pull-right
                        a href="agencies/#{c.id}"
                          i.fa.fa-eye
