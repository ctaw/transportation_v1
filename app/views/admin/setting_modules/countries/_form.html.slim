.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        h3.panel-title Country Details
        .actions.pull-right
          a href="/admin/setting_modules/countries" 
            i.fa.fa-backward
      .panel-body
        = form_for([:admin, :setting_modules, @country], :html => {:class => "form-horizontal form-border"}) do |f|
          .form-group
            label.col-sm-3.control-label Country Code
            .col-sm-6
              = f.text_field :code, :class=>"form-control"
          .form-group
            label.col-sm-3.control-label Name
            .col-sm-6
              = f.text_field :name, :class=>"form-control"

          .row 
            .col-md-12
              hr
              .btn-group.pull-right
                a.btn.btn-default.btn-sm href="/admin/setting_modules/countries" Cancel
                = f.submit "Save", :class => "btn btn-success btn-sm"